        <h2><%= number_to_currency(@total) %></h2>
      </div>
      <div class="card3">
        <h6>Yield on Cost</h6>
        <h2>4%</h2>
      </div>
      <div class="card4">
        <h6></h6>
        <h2></h2>
      </div>
    </div>
      <ul class='primary-info'>
        <li><%= link_to "All Portfolios", root_path %></li>
        <% @accounts.each do |account| %>
          <li><%= link_to account.account_name, account_path(account) %></li>
        <% end %>
        <li><%= link_to "Add Account", new_account_path %></li>
      </ul>
    <%= render "dashboard/table" %>
  <% end %>


