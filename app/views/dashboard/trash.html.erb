  <% if current_user.accounts.empty? %>
      <%= render "layouts/empty_state" %>
  <% else %>
    <div class="account-balance">
      <div>
        <h1><%= number_to_currency(@total_principle_invested) %></h1>
        <p>$500</p>
    </div>
        <div class='holding'>
          <%= link_to "Add Holding", new_account_holding_path, class: 'btn btn-primary justify-content-end' %>
        </div>
    </div>
    <div class="primary-info">
      <div class="card1">
        <h6>Portfolio Yield</h6>
        <h2><%= @account.portfolio_yield %></h2>
      </div>
      <div class="card2">
