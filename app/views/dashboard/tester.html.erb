<table class='table'>
  <thead>
    <tr>
      <th>Ticker</th>
      <th>Shares</th>
      <th>Price</th>
      <th>Change</th>
      <th>Average Cost</th>
      <th>Profit/ Loss</th>
      <th>Dividend Yield</th>
      <th>Yield on Cost</th>
      <th>Annual Income</th>
      <th>Drip Adjusted Income</th>
    </tr>
  </thead>
  <tbody>
    <% @account_info.each do |acct| %>
      <% acct.companies.uniq.each do |companies| %>
        <tr>
          <td><%= companies.symbol %><br> <%= companies.name %></td>
          <td><%= companies.account_holdings.sum(:shares)%></td>
          <td><%= number_to_currency(companies.price_history_dailies.last.close) %></td>
          <td></td>
          <td><%= number_to_currency(companies.account_holdings.sum(:total_cost) / companies.account_holdings.sum(:shares)) %></td>
          <td><%= number_to_currency(companies.price_history_dailies.last.close - (companies.account_holdings.sum(:total_cost) / companies.account_holdings.sum(:shares))) %></td>
          <td><%= number_to_percentage(companies.dividend_yield, precision: 2) %></td>
          <td><%= number_to_percentage(companies.company_infos.last.dividend_per_share / (companies.account_holdings.sum(:total_cost) / companies.account_holdings.sum(:shares)) * 100, precision: 2) %></td>
          <td><%= number_to_currency(companies.company_infos.last.dividend_per_share * companies.account_holdings.sum(:shares)) %></td>
          <td></td>
        </tr>
      <% end %>
    <% end %>
    <tr>
      <td></td>
      <td><%= @account_shares[1] %></td>
    </tr>
